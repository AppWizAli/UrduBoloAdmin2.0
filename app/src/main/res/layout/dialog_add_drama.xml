<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#414143"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:src="@drawable/baseline_arrow_back_ios_new_24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add Drama"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginVertical="17dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/etbghome"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white"
        android:hint="Drama Name"
        android:textColorHint="@color/white"
        android:id="@+id/editTextDramaName"
        android:paddingStart="10dp" />

    <!-- Drama No EditText -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/etbghome"
        android:layout_marginBottom="15dp"
        android:inputType="number"
        android:textColor="@color/white"
        android:hint="Drama No"
        android:textColorHint="@color/white"
        android:id="@+id/editTextDramaNo"
        android:paddingStart="10dp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/etbghome"
        android:layout_marginBottom="10dp"
        android:hint="Total Season"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:id="@+id/editTextTotalSeason"
        android:paddingStart="10dp" />





    <!-- Total Season EditText -->



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chooose Thumbnail"
        android:layout_marginRight="10dp"
        android:layout_gravity="end"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/btnUploadThumbnail" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/btnNext" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_background"
        android:layout_gravity="end"
        android:id="@+id/thumbnailview"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        android:layout_marginHorizontal="20dp"/>


</LinearLayout>



    </LinearLayout>